<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/chk_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
             />

        <ImageView
            android:id="@+id/pro_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/chk_confirm"
            android:src="@drawable/advert1" />

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amethysta"
            android:text="Category Name"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/pro_img"
             />


        <TextView
            android:id="@+id/pro_price"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/amethysta"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/pro_img"
            android:layout_below="@+id/pro_name"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pro_price"
            android:text="VNÄ"
            android:layout_below="@id/pro_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/pro_price"
            android:layout_toEndOf="@id/pro_img"
            android:layout_marginLeft="100dp">
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edt_pro_quantity"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="1"
                android:inputType="number"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>